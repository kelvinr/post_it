.container.form.log
  .well#login
    %h4 Login
    =form_tag '/login', authenticity_token: true do
      .form-group
        =label_tag :name
        =text_field_tag :name, nil, class: 'form-control'

      .form-group
        =label_tag :password
        =password_field_tag :password, nil, class: 'form-control'
        
      =submit_tag 'Login', class: 'btn btn-success'
  