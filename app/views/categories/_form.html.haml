.container.text-center#newcat.form
  .col-md-4.col-md-offset-2
    .well
      %h4 New Category
      =form_for @category, authenticity_token: true do |f|

        .form-group
          =f.label :name
          =f.text_field :name, class: 'form-control'

        =f.submit "Create", class: 'btn btn-success'