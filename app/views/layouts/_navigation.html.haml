%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %ul.nav.navbar-nav
        %li.col-md-offset-6
          =link_to "Postit", root_path, class:'navbar-brand'

    .btn-group.col-md-offset-3
      .btn.btn-info.btn-sm.dropdown-toggle{type: 'button', 'data-toggle' => 'dropdown'}
        Categories
        %span.caret
      %ul.dropdown-menu.scrollable-menu{role:'menu'}
        -if logged_in?
          %li
            = link_to(new_category_path) do
              %i.glyphicon.glyphicon-plus
              New Category
          %li.divider
          -Category.all.each do |category|
            %li= link_to category.name, category_path(category)
   
    -if logged_in?
      =link_to "Create new post", new_post_path, class: 'btn btn-success navbar-btn btn-sm col-md-offset-1'
      .btn-group.navbar-btn.pull-right
        .btn.btn-danger.btn-sm.dropdown-toggle{type: 'button', 'data-toggle' => 'dropdown'}
          =current_user.name
          %span.caret
        %ul.dropdown-menu{role: 'menu'}
          %li
            =link_to(edit_user_path(current_user)) do
              %i.glyphicon.glyphicon-pencil
              Edit profile
          %li
            =link_to(user_path(current_user)) do
              %i.glyphicon.glyphicon-user
              View profile
          %li.divider
          %li
            =link_to(logout_path) do 
              %i.glyphicon.glyphicon-log-out
              Logout
    -else
      =link_to "Register", register_path, class: 'btn btn-warning btn-sm navbar-btn col-md-offset-1'
      =link_to "Login", login_path, class: 'btn btn-success btn-sm navbar-btn col-md-offset-1'
    




