%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %ul.nav.navbar-nav
        %li= link_to "Postit", root_path, class:'navbar-brand'
        %li= link_to "link", '#'
    .btn-group.col-md-offset-1
      .btn.btn-info.btn-sm.dropdown-toggle{type: 'button', 'data-toggle' => 'dropdown'}
        Categories
        %span.caret
      %ul.dropdown-menu.scrollable-menu{role:'menu'}
        %li
          =link_to(new_category_path) do
            %i.glyphicon.glyphicon-plus
            New Category
        %li.divider
        -Category.all.each do |category|
          %li= link_to category.name, category_path(category)
    .btn.btn-success.navbar-btn.btn-sm.col-md-offset-1
      = link_to "New post", new_post_path