-if @post.errors.any?
  .alert.alert-danger
    %h5 There were some errors:
    %ul
      -@post.errors.full_messages.each do |msg|
        %li= msg

=form_for @post do |f|
  =f.label :title
  =f.text_field :title

  =f.label :url
  =f.text_field :url

  =f.label :description
  =f.text_area :description

  =f.submit "Create", class: "btn btn-primary"

