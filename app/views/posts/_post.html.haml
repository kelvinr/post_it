.row
  .col-md-8
    .well
      =render post.categories
      %h4= link_to post.title, fix_url(post.url)
      %h5= post.description
      %p
        %small.quiet
          =surround "#{post.creator.name} | Posted ", " ago" do
            =display_time(post.created_at)
          %br
          =link_to pluralize("#{post.comments.size}", "comment"), post_path(post)
          =link_to " | Edit Post", edit_post_path(post)